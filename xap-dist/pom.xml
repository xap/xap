    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>zip-open-xsds</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/assembly/xap-open-xsds.xml</descriptor>
                            </descriptors>
                            <finalName>xap-open-xsds</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                            <attach>false</attach>
                            <outputDirectory/>
                        </configuration>
                    </execution>
                    <execution>
                        <id>product-package</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/assembly/xap-core.xml</descriptor>
                                <descriptor>src/main/assembly/xap-examples.xml</descriptor>
                                <descriptor>src/main/assembly/xap-extensions.xml</descriptor>
                                <descriptor>src/main/assembly/xap-tools.xml</descriptor>
                                <descriptor>src/main/assembly/xap-openspaces.xml</descriptor>
                                <descriptor>src/main/assembly/resources.xml</descriptor>
                            </descriptors>
                            <finalName>package</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                            <attach>false</attach>
                            <outputDirectory/>
                        </configuration>
                    </execution>
                    <execution>
                        <id>package-javadoc</id>
                        <phase>${javadoc.phase}</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/assembly/javadoc.xml</descriptor>
                            </descriptors>
                            <finalName>package</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                            <attach>false</attach>
                            <outputDirectory />
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-zip</id>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/assembly/zip-product.xml</descriptor>
                            </descriptors>
                            <appendAssemblyId>false</appendAssemblyId>
                            <finalName>gigaspaces-xap-${gs.build-name}</finalName>
                            <attach>true</attach>
                            <outputDirectory/>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>echo.git.log</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <executable>${update-git-info-script}</executable>
                </configuration>
            </plugin>
            <!--generate html from markdown-->
            <plugin>
                <groupId>com.ruleoftech</groupId>
                <artifactId>markdown-page-generator-plugin</artifactId>
                <version>0.10</version>
                <executions>
                    <execution>
                        <phase>process-sources</phase>
                        <id>data-example-html</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <headerHtmlFile>${basedir}/../xap-examples/hello-world/html/header.html</headerHtmlFile>
                            <footerHtmlFile>${basedir}/../xap-examples/hello-world/html/footer.html</footerHtmlFile>
                            <inputDirectory>${basedir}/../xap-examples/hello-world</inputDirectory>
                            <outputDirectory>${basedir}/../xap-examples/hello-world</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <phase>process-sources</phase>
                        <id>processing-example-html</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <headerHtmlFile>${basedir}/../xap-examples/hola-mundo/html/header.html</headerHtmlFile>
                            <footerHtmlFile>${basedir}/../xap-examples/hola-mundo/html/footer.html</footerHtmlFile>
                            <inputDirectory>${basedir}/../xap-examples/hola-mundo</inputDirectory>
                            <outputDirectory>${basedir}/../xap-examples/hola-mundo</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!--end generate html from markdown-->
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>Windows</id>
            <activation>
                <os>
                    <family>Windows</family>
                </os>
            </activation>
            <properties>
                <update-git-info-script>updateGitInfo.bat</update-git-info-script>
            </properties>
        </profile>

        <profile>
            <id>unix</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>
            <properties>
                <update-git-info-script>./updateGitInfo.sh</update-git-info-script>
            </properties>
        </profile>
    </profiles>
